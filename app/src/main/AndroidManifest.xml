<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="yash.com.miniproject.dherya">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" /> <!-- <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="18" /> -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".app.recipe.RecommendedRecipeActivity"
            android:exported="false" />
        <activity
            android:name=".app.grocery.MyOrderActivity"
            android:exported="false" />
        <activity
            android:name=".app.grocery.ProductViewActivity"
            android:exported="false" />
        <activity
            android:name=".app.grocery.CheckoutActivity"
            android:exported="false" />
        <activity
            android:name=".app.grocery.ProductActivity"
            android:exported="false" />
        <activity
            android:name=".app.grocery.CartActivity"
            android:exported="false" />
        <activity
            android:name=".app.recipe.RecipeDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".app.activities.NotificationMessageActivity"
            android:exported="false" />
        <activity
            android:name=".app.activities.ReminderActivity"
            android:exported="false" />
        <activity
            android:name=".app.activities.SignupActivity"
            android:exported="false" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="yash.com.miniproject.dherya.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="ocr" />

        <activity
            android:name=".app.activities.LauncherActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.activities.WelcomeActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".app.activities.LoginActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".app.activities.AddCreditCardActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".app.activities.HomeActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".app.activities.AppPreferenceActivity"
            android:label="@string/app_name"
            android:theme="@style/AppPreferenceTheme" />
        <activity
            android:name=".app.activities.ExpenseDetailActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".app.activities.ImageCropperActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".app.activities.ImageViewerActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".app.activities.OcrCreateExpenseActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="Read Text"
            android:screenOrientation="portrait" />

        <receiver android:name=".app.activities.AlarmBroadcast" />
    </application>

</manifest>