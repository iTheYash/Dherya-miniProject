<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Custom configurable attributes for HorizontalBar-->
    <declare-styleable name="HorizontalBar">
        <attr name="textLo" format="string"/>
        <attr name="textHi" format="string"/>
        <attr name="textBar" format="string"/>
        <attr name="textSizePx" format="integer"/>
        <attr name="textColor" format="color"/>
        <attr name="barTextColorIn" format="color"/>
        <attr name="barTextColorOut" format="color"/>

        <attr name="barHeightPx" format="integer"/>
        <attr name="barColor" format="color"/>
        <attr name="barGradientColorStart" format="color"/>
        <attr name="barGradientColorEnd" format="color"/>

        <attr name="progressPercentage" format="integer"/>
        <attr name="backgroundColor" format="color"/>
    </declare-styleable>
</resources>