<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white
        </item>                   <!-- Text color of toolbar title text -->
        <item name="android:textColorSecondary">@android:color/white
        </item>                 <!-- Text color of navigation drawer icon-->
        <item name="color">@android:color/white
        </item>                                      <!-- Text color of navigation drawer icon-->
        <item name="actionMenuTextColor">@android:color/white
        </item>                        <!-- Menu item color-->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Application's main theme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:navigationBarColor">@color/bpWhite</item>
        <item name="android:statusBarColor">@color/cc_foreground_green</item>
        <item name="android:actionBarTheme">@color/cc_foreground_green</item>


        <!--<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


</resources>