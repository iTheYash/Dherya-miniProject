<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chart_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="yash.com.miniproject.dherya.app.fragments.ChartExpenseFragment"
    >

    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/chart_expenses_linechart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <RelativeLayout
        android:id="@+id/chart_expenses_no_expenses_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/chart_expenses_no_expenses_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/icon_expense"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/chart_expenses_no_expenses_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="@string/fragment_charts_no_expenses_message"
                android:layout_below="@id/chart_expenses_no_expenses_image"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>